{
    "name": "react-higher-event",
    "version": "3.0.0",
    "description": "Declarative React API to listen to higher events",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "rm -fr lib/ && babel src --out-dir lib --ignore='__tests__'",
        "examples": "cd examples && yarn && yarn start",
        "test": "jest",
        "test:watch": "jest --watch",
        "pub": "yarn test && yarn flow && yarn build && yarn publish",
        "flow": "flow"
    },
    "repository": "https://github.com/bloodyowl/react-higher-event.git",
    "keywords": [
        "react",
        "higher-event",
        "click",
        "outside"
    ],
    "author": "bloodyowl <mlbli@me.com>",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.15.4",
        "@babel/core": "^7.15.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
        "@babel/plugin-transform-destructuring": "^7.14.7",
        "@babel/plugin-transform-modules-commonjs": "^7.15.4",
        "@babel/plugin-transform-parameters": "^7.15.4",
        "@babel/preset-flow": "^7.14.5",
        "@babel/preset-react": "^7.14.5",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "flow-bin": "^0.159.0",
        "jest-cli": "^27.1.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {},
    "peerDependencies": {
        "react": "^16.3.0 || ^17 || ^18",
        "react-dom": "^16.3.0 || ^17 || ^18"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testPathIgnorePatterns": [
            "<rootDir>/lib/"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-flow",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-transform-modules-commonjs",
            "@babel/plugin-transform-destructuring",
            "@babel/plugin-transform-parameters",
            "@babel/plugin-proposal-object-rest-spread"
        ]
    }
}
